<%= form_with(model: inquiry) do |form| %>
  <% if inquiry.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(inquiry.errors.count, "error") %> prohibited this inquiry from being saved:</h2>

      <ul>
        <% inquiry.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div>
    <%= form.label :purpose %>
    <%= form.number_field :purpose, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.textarea :body, class: "form-control" %>
  </div>

  <div class="form-field">
    <%= form.label :images %>
    <%= form.file_field :images, multiple: true, class: "form-control" %>
  </div>

  <div class="mt-3">
    <%= form.submit nil, class: "btn btn-primary" %>
  </div>
<% end %>
