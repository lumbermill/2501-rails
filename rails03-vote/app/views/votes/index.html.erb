<% content_for :title, "Votes" %>

<h1>Votes</h1>

<table id="votes" class="table">
  <% @votes.each do |vote| %>
    <tr>
      <td>
        <%= render vote %>
      </td>
      <td>
        <%= link_to "Show this vote", vote %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to "New vote", new_vote_path, class: "btn btn-primary" %>
